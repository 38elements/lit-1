{
    "name": "lit-virtualizer",
    "version": "0.1.0",
    "description": "Virtual scrolling for lit-html and LitElement",
    "license": "BSD-3-Clause",
    "main": "lit-virtualizer.js",
    "files": [
        "/lit-virtualizer.js",
        "/lib/"
    ],
    "module": "lit-virtualizer.js",
    "scripts": {
        "build": "npm run build:uni-virtualizer && cp -r src/ .",
        "build:uni-virtualizer": "cp -r ../uni-virtualizer/src/. ./src/lib/uni-virtualizer",
        "prepare": "npm run build",
        "test": "karma start karma.conf.js --single-run"
    },
    "author": "The Polymer Authors",
    "devDependencies": {
        "chai": "^4.2.0",
        "karma": "^4.1.0",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-mocha": "^1.3.0",
        "karma-mocha-reporter": "^2.2.5",
        "karma-rollup-preprocessor": "^7.0.0",
        "mocha": "^6.1.4",
        "rollup": "^1.11.2",
        "rollup-plugin-node-resolve": "^4.2.3"
    },
    "dependencies": {
        "event-target-shim": "^5.0.1",
        "lit-element": "latest",
        "lit-html": "latest",
        "resize-observer-polyfill": "^1.5.1"
    }
}
